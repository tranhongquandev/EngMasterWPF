<Window x:Class="EngMasterWPF.Views.TeacherForm.TeacherForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngMasterWPF.Views.TeacherForm"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="TeacherForm" Height="450" Width="800">
    <Grid Height="300" Width="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="50" />
 
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
            <materialDesign:PackIcon
            Width="20"
            Height="20"
            Margin="-3,7,0,0"
            Kind="Account" />
            <TextBlock
            FontFamily="{StaticResource FZ-PoppinsSemiBold}"
            FontSize="22"
            Text="Add teacher" Margin="10,0,0,0"  />
        </StackPanel>

        
            
       
    </Grid>
</Window>
