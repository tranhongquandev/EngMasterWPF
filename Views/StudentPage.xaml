                    <StackPanel Margin="0,0,0,10">
                        <materialDesign:SplitButton VerticalAlignment="Bottom" Content="Ngày">
                            <materialDesign:SplitButton.PopupContent>
                                <ListBox>
                                    <ListBoxItem>
                                        <RadioButton Content="Ngày" />
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <RadioButton Content="Thấng" />
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <RadioButton Content="Năm" />
                                    </ListBoxItem>
                                </ListBox>
                            </materialDesign:SplitButton.PopupContent>
                        </materialDesign:SplitButton>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <Style x:Key="ViewColumnStyle" TargetType="GridViewColumnHeader">
                            <Setter Property="Foreground" Value="#201F1D" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GridViewColumnHeader">
                                        <Border
                                            Margin="0,10,0,0"
                                            Padding="0,5,0,5"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="Transparent">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Transparent" />
                                </Trigger>
                            </Style.Triggers>

                        </Style>
                    </Grid.Resources>
                    <ScrollViewer
                        Grid.Row="0"
                        HorizontalScrollBarVisibility="Visible"
                        VerticalScrollBarVisibility="Auto">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background" Value="LightGray" />
                                <Setter Property="Foreground" Value="DarkSlateGray" />
                                <Setter Property="BorderBrush" Value="LightGray" />
                                <Setter Property="BorderThickness" Value="1" />
                            </Style>
                        </ScrollViewer.Resources>
                        <ListView ItemsSource="{Binding Students}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Id}"
                                        Header="Mã học viên"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Name}"
                                        Header="Họ tên"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding BirtDay}"
                                        Header="Ngày sinh"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Sex}"
                                        Header="Giới tính"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Address}"
                                        Header="Địa chỉ"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Phone}"
                                        Header="Số điện thoại"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Email}"
                                        Header="Email"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding StartAt}"
                                        Header="Ngày đăng ký"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding EndAt}"
                                        Header="Ngày học cuối"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                    <GridViewColumn
                                        Width="100"
                                        DisplayMemberBinding="{Binding Status}"
                                        Header="Trạng thái"
                                        HeaderContainerStyle="{StaticResource ViewColumnStyle}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>

                </Grid>

            </Border>


        </Grid>
    </Grid>
</UserControl>
